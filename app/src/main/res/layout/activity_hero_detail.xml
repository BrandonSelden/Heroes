<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroDetailActivity">

    <TextView
        android:id="@+id/textView_hero_detail_name"
        android:layout_width="171dp"
        android:layout_height="34dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_hero_detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Hero Name" />

    <ImageView
        android:id="@+id/imageView_hero_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_hero_detail_TITLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_hero_detail_name"
        app:srcCompat="@drawable/catman" />

    <TextView
        android:id="@+id/textView_hero_detail_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@+id/textView_heroDetail_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_hero_detail_image" />

    <TextView
        android:id="@+id/textView_heroDetail_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_heroDetail_TITLE2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_hero_detail_TITLE"
        tools:text="write description" />

    <TextView
        android:id="@+id/textView_heroDetail_TITLE2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superpower"
        app:layout_constraintBottom_toTopOf="@+id/textView_heroDetail_superpower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_description" />

    <TextView
        android:id="@+id/textView_heroDetail_superpower"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_heroDetail_TITLE3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_TITLE2"
        tools:text="write superpower" />

    <TextView
        android:id="@+id/textView_heroDetail_TITLE3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank:"
        app:layout_constraintBottom_toTopOf="@+id/textView_heroDetail_rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_superpower" />

    <TextView
        android:id="@+id/textView_heroDetail_rank"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_heroDetail_TITLE3"
        tools:text="write rank" />
</androidx.constraintlayout.widget.ConstraintLayout>